{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["es6", "es5", "dom"],
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "esnext",
    "baseUrl": "src",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": "src",
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ]
  },
  "exclude": ["node_modules"]
}
